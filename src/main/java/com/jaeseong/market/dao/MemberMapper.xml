<mapper namespace="com.jaeseong.market.dao.MemberMapper">
	<select id="getMemberByUserId" parameterType="String" resultType="MemberDTO">
		select * from member where userid=#{userid}
	</select>
	
	<select id="getAllMemberByAuth" parameterType="int" resultType="MemberDTO">
		select * from member where auth=#{auth}
