<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jaeseong.market.dao.MemberMapper">
	<select id="getMemberByUserId" parameterType="String" resultType="MemberDTO">
		select * from member where userid=#{userid}
	</select>
	
	<select id="getAllMemberByAuth" parameterType="int" resultType="MemberDTO">
		select * from member where auth=#{auth}
	</select>
	
	<insert id="insertMember" parameterType="MemberDTO">
		insert into member(userid, password, nickname) values
		(#{userid},#{password},#{nickname})
	</insert>
	
	<delete id="del_member" parameterType="int">
		delete from member where id=#{id}
	</delete>
	
	<update id="editMember" parameterType="MemberDTO">
		update member
		set nickname=#{nickname}, password=#{password}
		where id=#{id}
	</update>
	
</mapper>