<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jaeseong.market.dao.MenuMapper">
	<select id="getAllMenu" resultType="MenuDTO">
		select * from menu
	</select>
	
	<delete id="del_menu" parameterType="int">
		delete from menu where id=#{id}
	</delete>
	
	<select id="getMenuById" resultType="MenuDTO" parameterType="int">
		select * from menu where id=#{id}
	</select>
	
	<insert id="addMenu" parameterType="MenuDTO">
		insert into menu(mname, price)
			values (#{mname}, #{price})
	</insert>
	
	<update id="editMenu" parameterType="MenuDTO">
		update menu set mname=#{mname}, price=#{price}
		where id=#{id}
	</update>
	
	<update id="plusTodaySoldById" parameterType="int">
		update menu set todaysold = todaysold+#{param2}
		where id=#{param1}
	</update>
	
	<update id="setZeroTodaySold">
		update menu set todaysold = 0
	</update>
	
</mapper>